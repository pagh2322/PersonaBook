<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/custom_dialog_bg"
    android:divider="@drawable/custom_dialog_div_hor"
    android:showDividers="middle"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:paddingHorizontal="50dp"
        android:textAppearance="@style/RegularText"
        android:textColor="@color/fontBColor"
        android:textSize="16sp"
        android:text="@string/deletePersona" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/custom_dialog_divider"
        android:showDividers="middle">
        <TextView
            android:id="@+id/tv_deleteCancel"
            android:layout_gravity="center"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textAppearance="@style/BoldText"
            android:textColor="@color/fontBColor"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_gravity="center"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/BoldText"
            android:textColor="@color/fontBColor"
            android:textSize="16sp"
            android:text="@string/delete" />
    </LinearLayout>
</LinearLayout>